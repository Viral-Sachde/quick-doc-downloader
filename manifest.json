{
    "manifest_version": 3,
    "name": "Quick Doc",
    "version": "1.0.0",
    "description": "Quickly extract and download document links from any webpage with customizable settings",
    "theme_color": "#132649",
    "permissions": [
        "activeTab",
        "scripting",
        "downloads",
        "storage",
        "tabs"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Quick Doc",
      "default_icon": {
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
      }
    },
 "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }
],

    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  }